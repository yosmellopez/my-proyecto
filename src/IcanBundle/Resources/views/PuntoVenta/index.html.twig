{% extends 'IcanBundle::layout.html.twig' %}

{% block subtitle %} - Puntos de venta{% endblock %}

{% block stylesheetspecific %}
    <link href="{{ asset('bundles/ican/plugins/jquery-tags-input/jquery.tagsinput.css') }}" rel="stylesheet"
          type="text/css"/>
{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Puntos de Venta</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Puntos de Venta</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Administre los puntos de venta</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-puntoVenta" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Mis Puntos de venta
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="#" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: actions -->
                <div class="m-form m-form--label-align-right m--margin-bottom-20">
                    <div class="row">
                        <div class="col-xl-12 order-1 m--align-left">
                            <a id="btn-nuevo-puntoVenta"
                               class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air"
                               href="#">
							<span>
								<i class="la la-plus"></i>
								<span>
									Nuevo
								</span>
							</span>
                            </a>
                            <a id="btn-eliminar-puntoVenta"
                               class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m--pull-right"
                               href="#">
							<span>
								<i class="la la-trash-o"></i>
								<span>
									Eliminar
								</span>
							</span>
                            </a>
                        </div>
                    </div>
                </div>
                <!--end: actions -->
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-12 order-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-8"></div>
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m_form_search"
                                               placeholder="Buscar...">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="puntoVenta-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

        <div id="form-puntoVenta" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-puntoVenta-title">
                            ¿Deseas crear una nueva puntoVenta? Sigue los siguientes pasos:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-puntoVenta"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="m-portlet__body">
                <div class="tab-content">
                    <div class="tab-pane active" id="tab-content-general" role="tabpanel">
                        <form class="m-form" id="puntoVenta-form" action="#" method="post">

                            <input type="hidden" id="puntoVenta_id" name="puntoVenta_id"/>

                            <div class="m-form__section m-form__section--first">
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">1</span>
                                        Para comenzar, ingrese el título del punto de venta
                                        <span class="ic-small italic">(obligatorio)</span>
                                    </label>
                                    <p class="m-form__help">
                                        Es muy importante que elijas un título claro y representativo,
                                        a través del cual puedas identificar fácilmente tu punto de venta una vez
                                        creado.
                                    </p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" class="form-control event-change" id="titulo" name="titulo"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">2</span>
                                        A continuación, ingrese la descripción del punto de venta
                                        <span class="ic-small italic">(opcional)</span>
                                    </label>
                                    <p class="m-form__help">
                                        Es muy importante que elijas un título claro y representativo,
                                        a través del cual puedas identificar fácilmente tu punto de venta una vez
                                        creado.
                                    </p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <textarea type="text" class="form-control event-change" id="descripcion" name="descripcion"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">3</span>
                                        Seguidamente, ingrese la ubicación en el mapa del punto de venta
                                        <span class="ic-small italic">(opcional)</span>
                                    </label>
                                    <p class="m-form__help">
                                        Usted debe buscar la ubicación en el mapa del punto de venta para que pueda ser incrustado en los detalles.
                                    </p>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <textarea type="text" class="form-control event-change" id="ubicacionMapa" name="ubicacionMapa"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-form__group ic-form-group">
                                    <label><span class="ic-step-number">4</span>Define el estado en el que se creará el punto de venta</label>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="m-form__group form-group">
                                                <div class="m-radio-inline">
                                                    <label class="m-radio">
                                                        <input type="radio" name="radioestado" id="estadoactivo"
                                                               class="event-change" checked>
                                                        Activo
                                                        <span></span>
                                                    </label>
                                                    <label class="m-radio">
                                                        <input type="radio" name="radioestado" id="estadoinactivo"
                                                               class="event-change">
                                                        Inactivo
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

                <div class="m-form">
                    <div class="m-form__actions text-center">
                        <button id="btn-wizard-finalizar" class="btn btn-success" type="button">
                            Guardar
                        </button>
                        <button class="btn btn-danger cerrar-form-puntoVenta" type="button">
                            Cancelar
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsspecific %}
    <script src="{{ asset('bundles/ican/plugins/jquery-tags-input/jquery.tagsinput.min.js') }}"></script>
    <script src="{{ asset('bundles/ican/js/pages/punto-venta.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            PuntoVentas.init();
        });
    </script>
{% endblock %}
